<Window x:Class="Bank_statement_to_excel.GetInputForIgnore"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bank_statement_to_excel"
        mc:Ignorable="d"
        Title="Get user input" Height="182" Width="302" 
        WindowStartupLocation="CenterOwner">
    <Grid>
        <Label Content="Enter value to ignore (wages, salary):" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="txtInputToIgnore" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,53,0,0" Width="203"/>
        <Button Content="Submit" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,101,0,0" Width="74" Click="Submit_Click"/>

    </Grid>
</Window>
